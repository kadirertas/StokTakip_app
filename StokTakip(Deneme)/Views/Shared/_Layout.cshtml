


@using StokTakip_Deneme_.ActiveFolder
<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8">

    <title>
        ASP.NET MVC Stok Takip Otomasyonu
    </title>
    <!-- Boostrap Core CSS-->
    <link href="~/css/styles.css" rel="stylesheet">

</head>

<body>
    <!--Navigation-->
    <nav class=" navbar navbar-expand-lg navbar-dark bg-dark navbar-static-top">
        <div class="container">

            <a class=" navbar-brand" href="#"> Stok Takip Otomasyonu </a>
            <button class=" navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="#navbarResponsive">     </button>
            <div class="collapse navbar-collapse" id=" navbarResponsive">
                <!--***-->
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item px-lg-4 @Html.Active("Urunler","Index")">
                        <a class="nav-link" href="/Urunler/Index/">
                            Ürünler
                            <span class="sr-only">
                            </span>
                        </a>
                    </li>
                    @if (User.IsInRole("ceo") )
                    {
                        <li class=" nav-item">
                            <a class=" nav-link px-lg-4 @Html.Active("Kategoriler","Index")" href="/Kategoriler/Index/">Kategoriler</a>
                        </li>
                        <li class=" nav-item">
                            <a class=" nav-link px-lg-4 @Html.Active("Markalar","Index")" href="/Markalar/Index/">Markalar</a>
                        </li>
                     

                    }
                    @if (User.IsInRole("ceo") || User.IsInRole("personel"))
                    {
                  
                        <li class=" nav-item">
                            <a class=" nav-link px-lg-4 @Html.Active("Birimler","Index")" href="/Birimler/Index/">Birimler</a>
                        </li>

                    }


                    <li class=" nav-item">
                        <a class=" nav-link px-lg-4 " href="/Kullanicilar/Logout/">Çıkış Yap</a>
                    </li>
                    <li class=" nav-item">
                        <a class=" nav-link px-lg-4 " style=" color : bisque">@User.Identity.Name</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!--
    Page Content
    -->
    <div class="container" style="margin-top:20px;">

        <div class="row navbar-static-top">
            @RenderBody()
        </div>
    </div>
    <footer class="footer text-faded text-center py-xl-5  navbar-fixed-bottom">

        <div class="container">

            <div></div>
            <p class="m-0 table-sm ">Copyright & copy; Stok Takip Otomasyonu Web Sitesi </p>
        </div>
    </footer>
    <!--
    Bootstrap core JavaScript
    -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
